<div class="text-center">
    <h1 class="mb-4">LISTA DE PRODUCTOS</h1>
    {{#if getProducts}}

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>

            {{#each getProducts}}
                <tbody>
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.thumbnail}}</td>
                    </tr>
                </tbody>
            {{/each}}
        </table>

    {{else}}
        <p>No hay productos cargados</p>
    {{/if}}
</div>