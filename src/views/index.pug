html 
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous") 
        title="Utilizando Pug"

    body  
        div()
            header.join-header.text-center
                h1
                    i.fas.fa-smile
                    |  Centro de Mensajes
            main.join-main
                form(class='container text-center' id='formMessages')
                    div.form-control
                        label(for='email') Email
                        input(id='email' type='text' name='email' required='')
                    div.form-control
                        label(for='name') Nombre
                        input#message(type='text' name="name" required)
                    div.form-control
                        label(for='apeliido') Apellido
                        input#message(type='text' name="apellido" required)
                    div.form-control
                        label(for='alias') Alias
                        input#message(type='text' name="alias" required)
                    div.form-control
                        label(for='edad') Edad
                        input#message(type='text' name="edad" required)
                    div.form-control
                        label(for='avatar') Avatar
                        input#message(type='text' name="avatar" required)
                    button.btn(type='submit' onclick="submit") Enviar
                    div#messages

        div(id='containerMessages')

    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js" integrity="sha512-WL6WGKMPBiM9PnHRYIn5YEtq0Z8XP4fkVb4qy7PP4vhmYQErJ/dySyXuFIMDf1eEYCXCrQrMJfkNwKc9gsjTjA==" crossorigin="anonymous" referrerpolicy="no-referrer")
    script(src="/public/main.js")  
